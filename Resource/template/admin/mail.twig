{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'mail'] %}

{% block title %}{{ 'mailtemplateeditor.mail.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'mailtemplateeditor.mail.sub_title'|trans }}{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <span>{{ 'mailtemplateeditor.mail.header'|trans }}</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    {% for file in files %}
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-7 col-md-10 d-flex align-items-center">
                                    <a href="{{ url('plugin_MailTemplateEditor_mail_edit', {'name': file}) }}">
                                        {{ file }}
                                    </a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
{% endblock %}
